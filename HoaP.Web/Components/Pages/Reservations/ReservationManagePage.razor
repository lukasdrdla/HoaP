			NavigationManager.NavigateTo("/rezervace");
		}
		catch (DbUpdateException dbEx)
		{
			errorMessage = "Chyba při ukládání rezervace. Zkontrolujte, zda jsou všechna pole vyplněna správně.";
		}
		catch (Exception ex)
